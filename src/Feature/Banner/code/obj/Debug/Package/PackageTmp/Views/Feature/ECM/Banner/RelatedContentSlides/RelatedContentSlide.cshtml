@model EMAAR.ECM.Foundation.ORM.Models.sitecore.templates.Project.ECM.Content_Types.Related_Content_Slides.IRelated_Content_SlideList
@using EMAAR.ECM.Foundation.Constants
@using Glass.Mapper.Sc.Web.Mvc
@{ string backgroundCss = String.Empty;
    if (Model.IsBackgroundColorAvailable)
    {
        backgroundCss = CommonConstants.Explore;
    }
}
<section class="@backgroundCss">
    <div class="container">
        <h2 class="heading text-center wow fadeInUp">@Html.Glass().Editable(Model, x => x.RelatedContent_Slide_Title)</h2>

        <div class="exploreSlider wow fadeInUp" data-wow-delay=".5s">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var relatedContent in Model.Related_Content_Slides)
                    {
                        <div class="swiper-slide">
                            <div class="explore-item">
                                @using (Html.Glass().BeginRenderLink(relatedContent, x => x.CTA, new { @class = "link" }, isEditable: true))
                                {
                                    <div class="explore-item-img">
                                        @if (relatedContent != null && relatedContent.Image != null && !String.IsNullOrEmpty(relatedContent.Image.Alt))
                                        {
                                            @Html.Glass().RenderImage(relatedContent, x => x.Image, new { alt = relatedContent.Image.Alt, @class = "img-fluid" }, isEditable: true)

                                        }
                                        else
                                        {
                                            @Html.Glass().RenderImage(relatedContent, x => x.Image, new { alt = String.Empty, @class = "img-fluid" }, isEditable: true)

                                        }
                                        <h3 class="title">@Html.Glass().Editable(relatedContent, x => x.Title)</h3>
                                    </div>
                                    <div class="explore-item-text">
                                        <h3 class="title">@Html.Glass().Editable(relatedContent, x => x.Title)</h3>
                                        @Html.Raw(Html.Glass().Editable(relatedContent, x => x.Description))
                                    </div>

                                }
                            </div>
                        </div>
                    }

                </div>
            </div>
            @if (Model != null && Model.RelatedContents != null && Model.RelatedContents.Count() > 4)
            {
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            }
            else if (Request.Browser.IsMobileDevice && Model.RelatedContents.Count() > 1)
            {
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            }

        </div>
    </div>
</section>
