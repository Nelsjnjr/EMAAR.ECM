@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Glass.Mapper.Sc.Web.Mvc
@using EMAAR.ECM.Foundation.Constants
@model EMAAR.ECM.Foundation.ORM.Models.sitecore.templates.Project.ECM.Page_Types.Banner.IImageText

@{
    CommonConstants.Alignment alignment = ViewBag.Variants;

    switch (alignment)
    {
        case CommonConstants.Alignment.Right:
            @Html.Partial("~/Views/Banner/_RightImageText.cshtml", Model)
            break;
        case CommonConstants.Alignment.Background:
            @Html.Partial("~/Views/Banner/_BackgroundImageText.cshtml", Model)
            break;
        default:
            @Html.Partial("~/Views/Banner/_LeftImageText.cshtml", Model)
            break;
    }
}



