@model EMAAR.ECM.Foundation.ORM.Models.sitecore.templates.Project.ECM.Page_Types.IGeneric_ContentPage
@using Glass.Mapper.Sc.Web.Mvc
@using EMAAR.ECM.Foundation.SitecoreExtensions
@using EMAAR.ECM.Foundation.SitecoreExtensions.Settings
<!-- content starts here -->
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="mobileAccordionHolder">
                <span class="placehold"></span>
            </div>
            <div class="sideNavigation">
                <ul>
                    <li><a href="javascript:;">Communities</a></li>
                    <li><a href="javascript:;">Panorama</a></li>
                    <li class="active"><a href="javascript:;">Al Alka</a></li>
                    <li><a href="javascript:;">Al Arta</a></li>
                    <li><a href="javascript:;">Al Dhafrah</a></li>
                </ul>
            </div>
        </div>
        @if (Model != null)
        {
            <div class="col-md-8">
                <div class="content-section">
                    <div class="section-header">
                        @if (!String.IsNullOrEmpty(Model.Title))
                        {
                            <h1 class="heading"> @Html.Glass().Editable(Model, x => x.Title)</h1>
                        }
                        @if (!String.IsNullOrEmpty(Model.Introduction))
                        {
                            <p>
                                @Html.Glass().Editable(Model, x => x.Introduction)
                            </p>
                        }
                    </div>

                    @if (Model.Banner != null)
                    {
                        <div>
                            @Html.Glass().RenderImage(Model, x => x.Banner, new { alt = !String.IsNullOrEmpty(Model.Banner.Alt) ? Model.Banner.Alt : "image", @class = "full-image" }, isEditable: true)
                        </div>
                    }

                    <!--Start Content from RTE-->
                    @Html.Glass().Editable(Model, x => x.Content)
                    <!--End Content from RTE-->
                    @if (Model.Amenities != null)
                    {
                        @Html.Partial(String.Format("{0}ContentPage/Amenities/Amenities.cshtml", SitecoreSettings.ViewPath), Model.Amenities)
                    }
                    @if (Model.Faqs != null)
                    {
                        @Html.Partial(String.Format("{0}ContentPage/Faqs/Faqs.cshtml", SitecoreSettings.ViewPath), Model.Faqs)
                    }
                </div>
            </div>
        }
    </div>
</div>
