@model EMAAR.ECM.Foundation.ORM.Models.sitecore.templates.Project.ECM.Content_Types.Related_Pages.IRelated_Pages
@using EMAAR.ECM.Foundation.SitecoreExtensions
@using Glass.Mapper.Sc.Web.Mvc
@if (Model != null && Model.Pages != null && Model.Pages.Count() > 0)
{
    <div class="exploreBoxes">
        <div class="container">
            <div class="row">
                @foreach (var relatedPages in Model.Pages)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="explore-item">
                            @if (relatedPages.CTA != null)
                            {
                                using (Html.Glass().BeginRenderLink(relatedPages, x => x.CTA, new { @class = "link" }, isEditable: true))
                                {
                                    <div class="explore-item-img">
                                        @if (relatedPages != null && relatedPages.Image != null && !String.IsNullOrEmpty(relatedPages.Image.Alt))
                                        {
                                            @Html.Glass().RenderImage(relatedPages, x => x.Image, new { alt = relatedPages.Image.Alt, @class = "img-fluid" }, isEditable: true)

                                        }
                                        else
                                        {
                                            @Html.Glass().RenderImage(relatedPages, x => x.Image, new { alt = "image", @class = "img-fluid" }, isEditable: true)

                                        }
                                        <h3 class="title">@Html.Glass().Editable(relatedPages, x => x.Title)</h3>
                                    </div>
                                    <div class="explore-item-text">
                                        <h3 class="title">@Html.Glass().Editable(relatedPages, x => x.Title)</h3>
                                        @Html.Raw(Html.Glass().Editable(relatedPages, x => x.Summary))

                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}