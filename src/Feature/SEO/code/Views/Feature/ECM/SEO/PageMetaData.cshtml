@model EMAAR.ECM.Foundation.ORM.Models.sitecore.templates.Foundation.ECM.Base.I_PageBase
@using EMAAR.ECM.Foundation.Constants
@using System.Text.RegularExpressions
@if (Model == null)
{
    return;
}
@{
    <title>@Model.Title</title>
    <!--Start Meta tags-->
    if (!string.IsNullOrEmpty(Model.Meta_Title))
    {
        <meta name="title" content="@Model.Meta_Title" />
    }
    if (!string.IsNullOrEmpty(Model.Meta_Description))
    {
        <meta name="description" content="@Model.Meta_Description" />
    }
    if (!string.IsNullOrEmpty(Model.Meta_Keywords))
    {
        <meta name="keywords" content="@Model.Meta_Keywords" />
    }
    if (!string.IsNullOrEmpty(Model.Custom_Meta_Tags))
    {
        var customTags = Regex.Replace(Model.Custom_Meta_Tags, @"\r\n?|\n", "");
        foreach (var metaData in customTags.Split(','))
        {
            var metaKeyValue = metaData.Split(':');
            <meta name="@metaKeyValue[0]" content="@metaKeyValue[1]" />
        }
    }
    <!--End Meta tags-->
    <!--Start Og tags-->
    if (!string.IsNullOrEmpty(Model.Og_Title))
    {
        <meta name="og:title" content="@Model.Og_Title" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Description))
    {
        <meta name="og:description" content="@Model.Og_Description" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Image))
    {
        <meta name="og:image" content="@Model.Og_Image" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Locale))
    {
        <meta name="og:locale" content="@Model.Og_Locale" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Type))
    {
        <meta name="og:type" content="@Model.Og_Type" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Url))
    {
        <meta name="og:url" content="@Model.Og_Url" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Video))
    {
        <meta name="og:video" content="@Model.Og_Video" />
    }
    if (!string.IsNullOrEmpty(Model.Og_Site_Name))
    {
        <meta name="og:site_name" content="@Model.Og_Site_Name" />
    }
    <!--End Og tags-->
    <!--Start twitter tags-->
    if (!string.IsNullOrEmpty(Model.Twiiter_Title))
    {
        <meta name="twitter:title" content="@Model.Twiiter_Title" />
    }
    if (!string.IsNullOrEmpty(Model.Twitter_Card))
    {
        <meta name="twitter:card" content="@Model.Twitter_Card" />
    }
    if (!string.IsNullOrEmpty(Model.Twitter_Creator))
    {
        <meta name="twitter:creator" content="@Model.Twitter_Creator" />
    }
    if (!string.IsNullOrEmpty(Model.Twitter_Image))
    {
        <meta name="twitter:image" content="@Model.Twitter_Image" />
    }
    if (!string.IsNullOrEmpty(Model.Twitter_Site))
    {
        <meta name="twitter:site" content="@Model.Twitter_Site" />
    }
    if (!string.IsNullOrEmpty(Model.Twitter_Description))
    {
        <meta name="twitter:description" content="@Model.Twitter_Description" />
    }
    <!--End twitter tags-->
    <!--Start HrefLang Tags-->
    if (!string.IsNullOrEmpty(Model.Hreflang_Tags))
    {
        var hreflang= Regex.Replace(Model.Hreflang_Tags, @"\r\n?|\n", "");
        foreach (var hrefLang in hreflang.Split(','))
        {
            //example:   en:https://emaar.com/
            var hrefLangKeyValue = hrefLang.Split(':');
            //hrefLangKeyValue[1] = URl
            //hrefLangKeyValue[0] =language code
            <link rel="alternate" href="@String.Join("",hrefLangKeyValue.Skip(1))" hreflang="@hrefLangKeyValue[0]" />
        }
    }
    <!--End HrefLang Tags-->
    <!--Start Canonical Tags-->
    if (!string.IsNullOrEmpty(Model.Canonical_Tags))
    {
        var canonicalTags = Regex.Replace(Model.Canonical_Tags, @"\r\n?|\n", "");
        foreach (var canonicalUrl in canonicalTags.Split(','))
        {
            <link rel="canonical" href="@canonicalUrl" />
        }
    }
    else
    {
        <link rel="canonical" href="@Request.Url.GetLeftPart(UriPartial.Path)" />
    }
    <!--End Canonical Tags-->
    <!--Start Robots-->
    if (Model.Robots_Index_This_Page && Model.Robots_Follow_This_Page)
    {
        <meta name="robots" content="index,follow" />
    }
    else if (!Model.Robots_Index_This_Page && Model.Robots_Follow_This_Page)
    {
        <meta name="robots" content="noindex,follow" />
    }
    else if (Model.Robots_Index_This_Page && !Model.Robots_Follow_This_Page)
    {
        <meta name="robots" content="index,nofollow" />
    }
    else
    {
        <meta name="robots" content="noindex,nofollow" />
    }
    <!--End Robots-->
    <!-- Fav Icon -->
    <link rel="shortcut icon" href="@Model.SiteRoot.Fav_Shortcut_Icon" type="image/x-icon" />
    <link rel="icon" href="@Model.SiteRoot.Fav_Icon" type="image/ico" />
    <!-- End Fav Icon -->

}
